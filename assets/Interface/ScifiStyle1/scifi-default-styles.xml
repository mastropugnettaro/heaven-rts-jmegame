    <style id="fontCS16">
        <attributes font="Interface/Fonts/Counter-Strike.fnt" color="#ffff"/> 
    </style>
    
    <style id="scifi-button#panel">
        <attributes backgroundImage="Interface/ScifiStyle1/button/button2.png" imageMode="sprite-resize:220,48,0,5,210,5,5,5,210,5,38,5,210,5,5" paddingLeft="7px" paddingRight="7px" width="100px" height="35px" childLayout="center" visibleToMouse="true" />
        <effect>
            <onHover name="border" color="#822f" post="true" />
            <onHover name="imageOverlay" filename="Interface/ScifiStyle1/button/button2.png" imageMode="sprite-resize:220,48,2,5,210,5,5,5,210,5,38,5,210,5,5" post="true" />
            <onFocus name="imageOverlay" filename="Interface/ScifiStyle1/button/button2.png" imageMode="sprite-resize:220,48,1,5,210,5,5,5,210,5,38,5,210,5,5" post="true" />
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150" />
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150" />
        </effect>
    </style>
    <style id="scifi-button#text">
        <attributes align="center" valign="center" visibleToMouse="false" font="Interface/Fonts/Counter-Strike.fnt"/>
        <effect>
            <onEnabled name="textColorAnimated" startColor="#8886" endColor="#eeef" post="false" length="150" />
            <onDisabled name="textColorAnimated" startColor="#eeef" endColor="#8886" post="false" length="150" />
        </effect>
    </style>

    <style id="scifi-panel">
        <attributes backgroundImage="Interface/ScifiStyle1/panel/panel1.png" imageMode="resize:27,321,27,43,27,321,27,367,27,321,27,124" paddingLeft="27px" paddingTop="12px" paddingRight="27px"  paddingBottom="70px" width="100px" height="35px" childLayout="center" visibleToMouse="true" />
    </style>
    <style id="scifi-small-panel">
        <attributes backgroundImage="Interface/ScifiStyle1/panel/panel1.png" imageMode="resize:27,321,27,43,27,321,27,428,27,321,27,15" paddingLeft="27px" paddingTop="12px" paddingRight="27px"  paddingBottom="16px" width="100px" height="35px" childLayout="center" visibleToMouse="true" />
    </style>
</nifty-styles>

